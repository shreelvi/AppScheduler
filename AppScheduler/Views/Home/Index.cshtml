                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                }
                else if (item.Day == "Monday")
                {
                    <td></td>
                    <td>@item.Time<br />@item.Success<br /> @item.FilesDwup Files<br />Uploaded<br />@item.FilesSorted Files <br />Sorted</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>

                }
                else if (item.Day == "Tuesday")
                {
                    <td></td>
                    <td></td>
                    <td>@item.Time<br />@item.Success<br /> @item.FilesDwup Files<br />Uploaded<br />@item.FilesSorted Files <br />Sorted</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>

                }
                else if (item.Day == "Wednesday")
                {
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@item.Time<br />@item.Success<br /> @item.FilesDwup Files<br />Uploaded<br />@item.FilesSorted Files <br />Sorted</td>
                    <td></td>
                    <td></td>
                    <td></td>

                }
                else if (item.Day == "Thursday")
                {
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@item.Time<br />@item.Success<br /> @item.FilesDwup Files<br />Uploaded<br />@item.FilesSorted Files <br />Sorted</td>
                    <td></td>
                    <td></td>

                }
                else if (item.Day == "Friday")
                {
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@item.Time<br />@item.Success<br /> @item.FilesDwup Files<br />Uploaded<br />@item.FilesSorted Files <br />Sorted</td>
                    <td></td>

                }
                else
                {
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@item.Time<br />@item.Success<br /> @item.FilesDwup Files<br />Uploaded<br />@item.FilesSorted Files <br />Sorted</td>
                }

            </tr>
            }
        </tbody>

    </table>
</div>